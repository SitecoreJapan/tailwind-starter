{
  "$schema": "../../.sitecore/schemas/ModuleFile.schema.json",
  "namespace": "tailwind-basic",
  "references": ["tailwind-collection"],
  "items": {
    "path": "tailwind-basic",
    "includes": [
      {
        "name": "basic-content",
        "path": "/sitecore/content/starter/tailwind-basic",
        "rules": [
          {
            "path": "/home",
            "scope": "ItemAndDescendants",
            "allowedPushOperations": "CreateOnly"
          },
          {
            "path": "/Media",
            "scope": "ItemAndDescendants",
            "allowedPushOperations": "CreateAndUpdate"
          },
          {
            "path": "/Data",
            "scope": "ItemAndDescendants",
            "allowedPushOperations": "CreateAndUpdate"
          },
          {
            "path": "/Dictionary",
            "scope": "ItemAndDescendants",
            "allowedPushOperations": "CreateOnly"
          },
          {
            "path": "/Presentation",
            "scope": "ItemAndDescendants",
            "allowedPushOperations": "CreateAndUpdate"
          },
          {
            "path": "/Settings",
            "scope": "ItemAndDescendants",
            "allowedPushOperations": "CreateAndUpdate"
          },
          {
            "path": "*",
            "scope": "Ignored"
          }
        ]
      },
      {
        "name": "basic-media",
        "path": "/sitecore/media library/Project/starter/tailwind-basic",
        "allowedPushOperations": "CreateUpdateAndDelete"
      }
    ]
  }
}
